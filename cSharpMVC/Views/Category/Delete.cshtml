@model Category

<form method="post" asp-action="DeletePOST"> 
    <input asp-for="ID" hidden />
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        
            <h2 class="text-warning"> Delete Category</h2>
            <hr/>
       
    </div>

    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" disabled/>
        
    </div>
      <div class="mb-3">
        <label asp-for="DisplayOrder">DisplayOrder</label>
        <input asp-for="DisplayOrder" class="form-control" disabled/>
         
    </div>

    <button type="submit" class="btn btn-danger text-black" style="width:150px">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">Back to list</a>
    <br />
   @* <div asp-validation-summary="All"></div>*@
</div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}




